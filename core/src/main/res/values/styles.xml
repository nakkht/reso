<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_dark</item>
        <item name="android:windowBackground">@color/background_light</item>

        <item name="android:editTextStyle">@style/Text.Normal</item>
        <item name="android:textViewStyle">@style/Text.Normal</item>

        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="EditText.Large" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/Text.Large</item>
    </style>

    <style name="EditText.Normal" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/Text.Normal</item>
    </style>

    <style name="EditText.Medium" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/Text.Medium</item>
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Normal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

</resources>
